<div class="navbar" xmlns="http://www.w3.org/1999/html">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

      <ul class="nav">
        <li><%= link_to 'Home', root_path %></li>
        <li <%= ' class=active' if controller_name == 'categories' %>>
          <%= link_to 'Categories', admin_categories_path %>
        </li>
        <li <%= ' class=active' if controller_name == 'products' %>>
          <%= link_to 'Producten', admin_products_path %>
        </li>
        <li <%= ' class=active' if controller_name == 'employees' %>>
          <%= link_to 'Medewerkers', admin_employees_path %>
        </li>
        <li></li>
      </ul>

      <ul class="nav pull-right">
        <li class="divider-vertical"></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= current_user ? raw("<i class=\"icon-user icon-white\"></i> #{current_user.employee.first_name}") : 'Login' %>
            <b class="caret"></b>
          </a>
          <%- if current_user.nil? %>
              <ul class="dropdown-menu dropdown-form">
                <li>
                  <%= render 'navbar_login_form' %>
                </li>
              </ul>
          <%- else %>
              <ul class="dropdown-menu">
                <li><%= link_to raw('<i class="icon-cog"></i> Dashboard'), dashboard_admin_user_path(current_user) %></li>
                <li><a href="#"><i class="icon-cog"></i> Instellingen</a></li>
                <li class="divider"></li>
                <li><%= link_to raw('<i class="icon-off"></i> Uitloggen'), logout_path, method: :delete %></li>
              </ul>
          <%- end %>
        </li>
      </ul>
    </div>
  </div>
</div>