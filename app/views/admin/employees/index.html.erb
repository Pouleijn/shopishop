<h2>Listing employees</h2>

<p>&nbsp;</p>

<table class="table table-striped">
  <thead>
  <tr>
    <th><i class="icon-th-list"></i></th>
    <th>Naam</th>
    <th>Geslacht</th>
    <th>Geboortedag</th>
    <th></th>
  </tr>
  </thead>

  <tbody id="employees" data-update-url="<%= sort_admin_categories_url %>">
  <% @employees.each do |employee| %>
      <tr id="<%= employee.id %>">
        <td class="handle"><i class="icon-move"></i></td>
        <td class="list"><%= employee.full_name.capitalize %></td>
        <td><%= employee.gender %></td>
        <td><%= employee.birthday %></td>
        <td>
          <%= link_to_modal 'Bekijk', admin_employee_url(employee) %>
          <%= link_to_modal 'Wijzig', edit_admin_employee_url(employee) %>
          <%= link_to_destroy 'Verwijder', admin_employee_path(employee) %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= render 'modal-window' %>

<br/>

<%= link_to_modal_new 'New Category', new_admin_employee_path %>
